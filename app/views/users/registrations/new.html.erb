<div class="background">
  <h1>アカウント作成</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="acount">
      <%= f.text_field :name, autofocus: true,placeholder:"ユーザーネーム" %>
    </div>
    <div class="acount">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス" %>

    </div>
    <div class="acount">
      <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード(6文字以上)" %>
    </div>
    <div class="acount">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード再確認" %>
    </div>
    <div class="acount">
      <%= f.submit "完了" %>
    </div>
  <% end %>

  <div class="acount">
    <%= render "users/shared/links" %>
  </div>
</div>